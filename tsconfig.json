{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./build/app",
    "rootDir": "./app",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./build/types",
    "sourceMap": true,
    "lib": ["DOM", "ES2020"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@business-logic/*": ["business-logic/*"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@data/*": ["data/*"],
      "@firebase/*": ["firebase/*"],
      "@helpers/*": ["helpers/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["app"],
  "exclude": ["node_modules", "dist", "build"]
}
