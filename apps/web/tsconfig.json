{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./build/app",
    "rootDir": "./app",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./build/types",
    "sourceMap": true,
    "lib": ["DOM", "ES2020"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@business-logic/*": ["app/business-logic/*"],
      "@components/*": ["app/components/*"],
      "@tic-tac/*": ["app/components/game/tic-tac/*"],
      "@contexts/*": ["app/contexts/*"],
      "@data/*": ["app/data/*"],
      "@firebase-dir/*": ["app/firebase/*"],
      "@helpers/*": ["app/helpers/*"],
      "@hooks/*": ["app/hooks/*"],
      "@types-dir/*": ["app/types/*"],
      "@utils/*": ["app/utils/*"],
      "@session/*": ["app/session/*"]
    }
  },
  "include": ["app"],
  "exclude": ["node_modules", "dist", "build"]
}
